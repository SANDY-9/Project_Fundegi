<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.THEME_study_watch"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/tv_watch"
        android:layout_width="232dp"
        android:layout_height="66dp"
        android:layout_marginTop="212dp"
        android:layout_marginBottom="442dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="50sp"
        android:text="00:00:00"
        android:textColor="@color/white"
        android:fontFamily="@font/robotobold"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_watch"
        android:layout_marginTop="-442dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/stopwatch_liner" />

    <ImageView
        android:id="@+id/iv_box"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="449dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/stopwatch_box" />

    <ToggleButton
        android:id="@+id/bt_start"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="406dp"
        android:background="@drawable/stopwatch_selector"
        android:clickable="true"
        android:textOff=""
        android:textOn="" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv_box"
        android:layout_alignTop="@+id/iv_box"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/robotomedium"
        android:gravity="center"
        android:text="2021-07-30"
        android:textColor="@color/calendar_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv_box"
        android:layout_alignTop="@+id/iv_box"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/robotobold"
        android:gravity="center"
        android:text="오늘 공부한 시간"
        android:textColor="@color/fundaegi_color2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_box"
        android:layout_alignEnd="@+id/iv_box"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/robotobold"
        android:gravity="center"
        android:text="00:00:00"
        android:textColor="@color/fundaegi_color2"
        android:textSize="20sp" />

<!-- StopWatch 종료 -->
    <TextView
        android:id="@+id/tv_guide"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>

    <ImageButton
        android:id="@+id/bt_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/tv_guide"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/stopwatch_bt_close" />

</RelativeLayout>